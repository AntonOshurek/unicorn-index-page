{
	"root": true,
	"env": {
		"es2021": true,
		"node": true,
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"semi": "off",
		"no-console": "warn",
		"no-unused-vars": "error",
		"prefer-const": "warn",
		"no-var": "error",
		"strict": ["error", "global"]
	},
	"extends": ["eslint:recommended"]
}
